{% extends 'base.html.twig' %}

{% block title %}Crear Cuenta{% endblock %}

{% block body %}
    {#<h1>Usuario creation</h1>#}

    {#{{ form_start(form) }}#}
    {#{{ form_widget(form) }}#}
    {#<input type="submit" value="Create" />#}
    {#{{ form_end(form) }}#}

    {#<ul>#}
    {#<li>#}
    {#<a href="{{ path('usuario_index') }}">Back to the list</a>#}
    {#</li>#}
    {#</ul>#}

    <div class="basic-form-area mg-b-15" style="padding-top: 1%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline12-list">
                        <div class="main-sparkline12-hd">
                            <h1 style="font-size: 200%">Crear Cuenta</h1>
                            <br>
                        </div>
                        <div class="sparkline12-graph">
                            <div class="basic-login-form-ad">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="all-form-element-inner">
                                            {{ form_start(form) }}
                                            {% if form_errors(form)  != '' %}
                                                <div class="alert alert-danger">
                                                    {{ form_errors(form) }}
                                                </div>
                                            {% endif %}
                                            {% if app.session.flashBag.has('danger') %}
                                                <div class="alert alert-danger">
                                                    {% for msg in app.session.flashBag.get('danger') %}
                                                        {{ msg }}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                            <div class="row">
                                                <div class="form-group-inner">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.username) }}
                                                        {% if form_errors(form.username)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.username) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.username, {'attr': {'class': 'form-control','maxlength':'20'}}) }}
                                                    </div>
                                                </div>

                                                <div class="form-group-inner" style="margin-top: -3%">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.email) }}
                                                        {% if form_errors(form.email)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.email) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.email, {'attr': {'class': 'form-control','maxlength':'30'}}) }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-top: 2%">
                                                <div class="form-group-inner"
                                                        {% if is_granted('ROLE_ADMIN') %}

                                                        {% endif %}
                                                        {% if is_granted('ROLE_MEDICO') %}
                                                            hidden
                                                        {% endif %}
                                                >
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.personalFk) }}
                                                        {% if form_errors(form.personalFk)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.personalFk) }}
                                                            </div>
                                                        {% endif %}
                                                        <div class="form-select-list">
                                                            {{ form_widget(form.personalFk, {'attr': {'class': 'form-control custom-select-value'}}) }}
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group-inner" style="margin-top: -3%"
                                                >
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.rol) }}
                                                        {% if form_errors(form.rol)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.rol) }}
                                                            </div>
                                                        {% endif %}
                                                        <div class="form-select-list">
                                                            {{ form_widget(form.rol, {'attr': {'class': 'form-control custom-select-value'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="password-meter-area mg-b-15">
                                                <div class="sparkline12-graph">
                                                    <div id="pwd-container1">
                                                        <div class="row" style="margin-top: 2%">
                                                            <div class="form-group-inner">
                                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                    {{ form_label(form.plainPassword.first) }}
                                                                    {% if form_errors(form.plainPassword.first)  != '' %}
                                                                        <div class="alert alert-danger">
                                                                            {{ form_errors(form.plainPassword.first) }}
                                                                        </div>
                                                                    {% endif %}
                                                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control example1','maxlength':'50'}}) }}
                                                                    <div class="form-group mg-b-pass">
                                                                        <div class="pwstrength_viewport_progress"></div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div id="pwd-container1">
                                                        <div class="form-group-inner" style="margin-top: -6%">
                                                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                                {{ form_label(form.plainPassword.second) }}
                                                                {% if form_errors(form.plainPassword.second)  != '' %}
                                                                    <div class="alert alert-danger">
                                                                        {{ form_errors(form.plainPassword.second) }}
                                                                    </div>
                                                                {% endif %}
                                                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control example1','maxlength':'50'}}) }}
                                                                <div class="form-group mg-b-pass">
                                                                    <div class="pwstrength_viewport_progress"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        {#<div class="form-group-inner">#}
                                        {#<div class="row">#}
                                        {#<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">#}
                                        {#{{ form_label(edit_form.rol) }}#}
                                        {#{{ form_errors(edit_form.rol) }}#}
                                        {#</div>#}
                                        {#<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">#}
                                        {#<div class="form-select-list">#}
                                        {#{{ form_widget(edit_form.rol , {'attr': {'class': 'form-control custom-select-value'}}) }}#}
                                        {#</div>#}
                                        {#</div>#}
                                        {#</div>#}
                                        {#</div>#}

                                        {#<input type="submit" value="Create"/>#}

                                        <div class="form-group-inner">
                                            <div class="login-btn-inner">
                                                <div class="row">
                                                    <div class="col-lg-3"></div>
                                                    <div class="col-lg-9">
                                                        <div class="login-horizental cancel-wp pull-right form-bc-ele">
                                                            <button class="btn btn-white">
                                                                <a href="{{ path('usuario_index') }}">Cancelar</a>
                                                            </button>
                                                            <button class="btn btn-sm btn-primary login-submit-cs"
                                                                    type="submit" value="Edit">Crear
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}
{% block javascripts %}
    <!-- pwstrength JS
		============================================ -->
    <script src="{{ asset('js/password-meter/pwstrength-bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/password-meter/zxcvbn.js') }}"></script>
    <script src="{{ asset('js/password-meter/password-meter-active.js') }}"></script>
{% endblock %}
