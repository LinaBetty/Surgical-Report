{% extends 'base.html.twig' %}

{% block body %}
    <h1>Raza</h1>

    <table>
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ raza.nombre }}</td>
            </tr>
            <tr>
                <th>Idraza</th>
                <td>{{ raza.idRaza }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('raza_index') }}">Back to the list</a>
        </li>
