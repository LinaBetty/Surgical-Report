    <div class="basic-form-area mg-b-15" style="padding-top: 1%; padding-bottom: 2%">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline12-list">
                        <div class="main-sparkline12-hd">
                            <h1 style="font-size: 200%">Nuevo Paciente</h1>
                            <br>
                        </div>
                        <div class="sparkline12-graph">
                            <div class="basic-login-form-ad">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="all-form-element-inner">
                                            {{ form_start(form) }}
                                            {%  if form_errors(form)  != '' %}
                                                <div class="alert alert-danger">
                                                    {{ form_errors(form) }}
                                                </div>
                                            {% endif %}
                                            {% if app.session.flashBag.has('danger') %}
                                                <div class="alert alert-danger">
                                                    {% for msg in app.session.flashBag.get('danger') %}
                                                        {{ msg }}
                                                    {% endfor %}
                                                </div>
                                            {% endif %}
                                            <div class="row" style="padding-bottom: 1%">
                                                <div class="form-group-inner">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.ci) }}
                                                        {%  if form_errors(form.ci)  != '' %}
                                                        <div class="alert alert-danger">
                                                        {{ form_errors(form.ci) }}
                                                        </div>
                                                        {% endif %}
                                                        {{ form_widget(form.ci , {'attr': {'class': 'form-control pull' , 'data-mask':'99999999999'}}) }}
                                                        <span class="help-block">Debe contener 11 caracteres</span>
                                                    </div>
                                                </div>
                                                <div class="form-group-inner" style="margin-top: -3%">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.nombre) }}
                                                        {%  if form_errors(form.nombre)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.nombre) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control' , 'onkeypress': 'return soloLetras(event)'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="padding-bottom: 2%">
                                                <div class="form-group-inner">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.primerApellido) }}
                                                        {%  if form_errors(form.primerApellido)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.primerApellido) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.primerApellido, {'attr': {'class': 'form-control' , 'onkeypress': 'return soloLetras(event)'}}) }}
                                                    </div>
                                                </div>
                                                <div class="form-group-inner" style="margin-top: -3%">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.segundoApellido) }}
                                                        {%  if form_errors(form.segundoApellido)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.segundoApellido) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.segundoApellido, {'attr': {'class': 'form-control' , 'onkeypress': 'return soloLetras(event)'}}) }}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="padding-bottom: 0%">
                                                <div class="form-group-inner">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.historiaClinica) }}
