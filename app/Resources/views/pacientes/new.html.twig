                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.sexoFk) }}
                                                            </div>
                                                        {% endif %}
                                                        <div class="form-select-list">
                                                            {{ form_widget(form.sexoFk, {'attr': {'class': 'form-control custom-select-value'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" style="padding-bottom: 0%">
