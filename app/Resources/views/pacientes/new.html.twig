                                                        {% endif %}
                                                            {{ form_widget(form.direccion, {'attr': {'class': 'form-control'}}) }}
                                                    </div>
                                                </div>
                                                <div class="form-group-inner" style="margin-top: -3%">
                                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                        {{ form_label(form.grupoSanguineo) }}
                                                        {%  if form_errors(form.grupoSanguineo)  != '' %}
                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.grupoSanguineo) }}
                                                            </div>
                                                        {% endif %}
                                                        <div class="chosen-select-single mg-b-20">
                                                            {{ form_widget(form.grupoSanguineo, {'attr': {'class': 'chosen-select'}}) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {#<input type="submit" value="Create"/>#}
                                            <div class="form-group-inner">
                                                <div class="login-btn-inner">
                                                    <div class="row">
                                                        <div class="col-lg-3"></div>
                                                        <div class="col-lg-9">
                                                            <div class="login-horizental cancel-wp pull-right form-bc-ele">
                                                                <button class="btn btn-white"
                                                                        href=""><a href="{{ path('pacientes_index') }}">Cancelar</a>
                                                                </button>
                                                                <button class="btn btn-sm btn-primary login-submit-cs"
                                                                        type="submit" value="Create">Guardar
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
