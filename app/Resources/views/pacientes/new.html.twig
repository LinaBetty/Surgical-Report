                                                            <div class="alert alert-danger">
                                                                {{ form_errors(form.historiaClinica) }}
                                                            </div>
                                                        {% endif %}
                                                        {{ form_widget(form.historiaClinica , {'attr': {'class': 'form-control pull' , 'data-mask':'99999999999'}}) }}
