{% extends 'base.html.twig' %}

{% block title %}
    Mostrar Operación
{% endblock %}
{% block body %}

    {#<h1>Operacion</h1>#}
    <div class="breadcome-area" style="margin-bottom: 5%">
        <div class="container-fluid" style="margin-top: 25px; margin-bottom: 25px">
            <div class="col-lg-2 col-md-5 col-sm-5 col-xs-11" style="margin-left: 15px">
                <div class="hpanel shadow-inner hbggreen bg-1 responsive-mg-b-30">
                    <div class="panel-body">
                        <div class="text-center content-bg-pro">
                            <h3>Folio No.</h3>
                            <p class="text-big font-light">
                                {{ operacion.folio }}
                            </p>
                            <small>
                                Fecha de
                                Elaboracion: {% if operacion.fechaElaboracion %}{{ operacion.fechaElaboracion|date('Y-m-d') }}{% endif %}
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                <div class="hpanel widget-int-shape responsive-mg-b-30">
                    <div class="panel-body">
                        <div class="stats-title pull-left">
                            <h4>Tiempo Quirúrgico</h4>
                        </div>
                        <div class="stats-icon pull-right">
                            <i class="educate-icon educate-form"></i>
                        </div>
                        <div class="m-t-xl widget-cl-1">
                            <h1 class="text-success">{% if operacion.tiempoQuirurgico %}{{ operacion.tiempoQuirurgico|date('H:i:s') }}{% endif %}</h1>
                            <small>
                                <strong>Fecha/Hora Inicio</strong>
                                {% if operacion.fechaInicio %}{{ operacion.fechaInicio|date('Y-m-d') }}{% endif %}
                                {% if operacion.horaInicio %}{{ operacion.horaInicio|date('H:i:s') }}{% endif %}
                                <strong>Fecha/Hora Fin</strong>
                                {% if operacion.fechaFin %}{{ operacion.fechaFin|date('Y-m-d') }}{% endif %}
                                {% if operacion.horaFin %}{{ operacion.horaFin|date('H:i:s') }}{% endif %}
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="static-table-area" style="margin-bottom: 25px">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="sparkline8-list">
                                <div class="sparkline8-hd">
                                    <div class="main-sparkline8-hd">
                                        <h1>Paciente</h1>
                                    </div>
                                </div>
                                <div class="sparkline8-graph">
                                    <div class="static-table-list">
                                        <table class="table">
                                            <thead>
                                            <tr>
                                                <th>CI</th>
                                                <th>Nombre</th>
                                                <th>Primer Apellido</th>
                                                <th>Segundo Apellido</th>
                                                <th>Edad</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>
                                                <td>{{ operacion.pacienteFk.ci }}</td>
                                                <td>{{ operacion.pacienteFk.nombre }}</td>
                                                <td>{{ operacion.pacienteFk.primerApellido }}</td>
                                                <td>{{ operacion.pacienteFk.segundoApellido }}</td>
                                                <td>{{ operacion.edadPaciente }}</td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="static-table-area" style=" margin-top: 25px">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="sparkline8-list">
                                        <div class="sparkline8-hd">
                                            <div class="main-sparkline8-hd">
                                                <h1>Personal de la Operación</h1>
                                            </div>
                                        </div>
                                        <div class="sparkline8-graph">
                                            <div class="static-table-list">
                                                <table class="table">
                                                    <thead>
                                                    <tr>
                                                        <th>NP</th>
                                                        <th>Nombre</th>
                                                        <th>Tipo de Personal</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr>
                                                        <td>{{ operacion.cirujanoFk.nivelProfesionalFk.nombreCorto }}</td>
                                                        <td>{{ operacion.cirujanoFk.nombre }}</td>
                                                        <td>Cirujano</td>
                                                    </tr>
                                                    <tr>
                                                        <td>{{ operacion.anestesistaFk.nivelProfesionalFk.nombreCorto }}</td>
                                                        <td>{{ operacion.anestesistaFk.nombre }}</td>
                                                        <td>Anestesista</td>
                                                    </tr>
                                                    <tr>
                                                        <td>{{ operacion.perfusionistaFk.nivelProfesionalFk.nombreCorto }}</td>
                                                        <td>{{ operacion.perfusionistaFk.nombre }}</td>
                                                        <td>Perfusionista</td>
                                                    </tr>
                                                    <tr>
                                                        <td>{{ operacion.primerayudanteFk.nivelProfesionalFk.nombreCorto }}</td>
                                                        <td>{{ operacion.primerayudanteFk.nombre }}</td>
                                                        <td>Primer Ayudante</td>
                                                    </tr>
                                                    <tr>
                                                        <td>{{ operacion.enfermeraFk.nivelProfesionalFk.nombreCorto }}</td>
                                                        <td>{{ operacion.enfermeraFk.nombre }}</td>
                                                        <td>Enfermera</td>
                                                    </tr>

                                                    {% for ayudante in ayudantes %}
                                                        <tr>
                                                            <td>{{ ayudante.personalFk.nivelProfesionalFk.nombreCorto }}</td>
                                                            <td>{{ ayudante.personalFk.nombre }}</td>
                                                            <td>Otros Ayudantes</td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="sparkline8-list">
                                        <div class="sparkline8-hd">
                                        </div>
                                        <div class="sparkline8-graph">
                                            <div class="static-table-list">
                                                <table class="table">
                                                    <tr>
                                                        <td>Codificacion de Operaciones</td>
                                                        <td>
                                                            {{ operacion.clasifOperTipo1Fk.nombre }}
                                                            {{ operacion.clasifOperTipo2Fk.nombre }}
                                                            {{ operacion.clasifOperTipo3Fk.nombre }}
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>Salón</td>
                                                        <td>{{ operacion.salon }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Codificación</td>
                                                        <td>{{ operacion.codificacionFk.nombre }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Agente Anéstesico</td>
                                                        <td>{{ operacion.agenteAnestesicoFk.nombre }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Método Anéstesico</td>
                                                        <td>{{ operacion.metodoAnestesicoFk.nombre }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Diagnóstico Clínico</td>
                                                        <td>{{ operacion.diagnosticoClinicoFk.nombre }}</td>
                                                    </tr>
                                                    <tr>
                                                        <td>Operación Realizada</td>
                                                        <td>{{ operacion.operacionRealizadaFk.nombre }}</td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>


                    <div class="col-md-12 col-md-12 col-sm-12 col-xs-12" style="margin-top: 25px">
                        <div class="hpanel email-compose mailbox-view">
                            <div class="panel-body panel-csm">
                                <div>
                                    <h4>Descripción del acto operatorio:</h4>
                                    <p>{{ operacion.descripcionActoOperatorio }}</p>
                                    <h4>Accidentes Ocurridos:</h4>
                                    <p>{{ operacion.accidentesOcurridos }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="program-widget-bc mg-t-30 mg-b-15" style="padding-left: 30px; margin-top: 10px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <div class="hpanel shadow-inner responsive-mg-b-30">
                            <div class="panel-body">
                                <div class="table-responsive wd-tb-cr">
                                    <table class="table table-striped">
                                        <thead>
                                        <th>Tiempo</th>
                                        <th>Valor(min)</th>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Tiempo de paro anóxico</span>
                                            </td>
                                            <td>{{ operacion.tparoAnoxico }} </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Tiempo de bypass total</span>
                                            </td>
                                            <td>{{ operacion.tbypassTotal }}</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Tiempo de bypass parcial</span>
                                            </td>
                                            <td>{{ operacion.tbypassParcial }}</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Tiempo de bypass de apoyo</span>
                                            </td>
                                            <td>{{ operacion.tbypassApoyo }}</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">TRM</span>
                                            </td>
                                            <td>{{ operacion.trm }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="sparkline8-list">
                            <div class="sparkline8-graph">
                                <div class="static-table-list">
                                    <table class="table">
                                        <tbody>
                                        <tr>
                                            <td>Suturas Empleadas</td>
                                            <td>{{ operacion.suturasEmpleadas }}</td>
                                        </tr>
                                        <tr>
                                            <td>Drenajes</td>
                                            <td>{{ operacion.drenajes }}</td>
                                        </tr>
                                        <tr>
                                            <td>Vía de exteorización del drenaje</td>
                                            <td>{{ operacion.viaExteorizacionDrenaje }}</td>
                                        </tr>
                                        <tr>
                                            <td>Otras Operaciones Realizadas</td>
                                            <td>{{ operacion.otrasOperaciones }}</td>
                                        </tr>
                                        <tr>
                                            <td>Diagnóstico Operatorio</td>
                                            <td>{{ operacion.diagnosticoOperatorio }}</td>
                                        </tr>
                                        <tr>
                                            <td>Piezas enviadas a Anatomía Patológica</td>
                                            <td>{{ operacion.piezasEnviadasAp }}</td>
                                        </tr>
                                        <tr>
                                            <td>Muestras envidas al laboratorio</td>
                                            <td>{{ operacion.muestrasEnviadasLab }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <div class="hpanel shadow-inner responsive-mg-b-30">
                            <div class="panel-body">
                                <div class="table-responsive wd-tb-cr">
                                    <table class="table table-striped">
                                        <thead>
                                        <th>Cantidad de Compresas utilizadas</th>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Grandes</span>
                                            </td>
                                            <td>{{ operacion.cantCompresasG }}</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Medianas Completas</span>
                                            </td>
                                            <td>{{ operacion.cantCompresasMc }}</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span class="text-success font-bold">Chicas</span>
                                            </td>
                                            <td>{{ operacion.cantCompresasCh }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="static-table-area" style="margin-left: 30px ;margin-top: 25px; margin-bottom: 25px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="sparkline8-list">
                            <div class="sparkline8-graph">
                                <div class="static-table-list">
                                    <table class="table">
                                        <thead>
                                        <th>Líquidos Administrados</th>
                                        <th>Cantidad(mL)</th>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>Total</td>
                                            <td>{{ operacion.totalLiquidoAdministrado }}</td>
                                        </tr>
                                        <tr>
                                            <td>Sangre</td>
                                            <td>{{ operacion.sangre }}</td>
                                        </tr>
                                        <tr>
                                            <td>Glóbulos</td>
                                            <td>{{ operacion.globulos }}</td>
                                        </tr>
                                        <tr>
                                            <td>Plasma</td>
                                            <td>{{ operacion.plasma }}</td>
                                        </tr>
                                        <tr>
                                            <td>Dextrosa al 5%</td>
                                            <td>{{ operacion.dextrosa }}</td>
                                        </tr>
                                        <tr>
                                            <td>Electrolitos Dextran 40</td>
                                            <td>{{ operacion.electrolitosDextran }}</td>
                                        </tr>
                                        <tr>
                                            <td>ClNa</td>
                                            <td>{{ operacion.clna }}</td>
                                        </tr>
                                        <tr>
                                            <td>Cantidad de líquido en el aspirador</td>
                                            <td>{{ operacion.cantLiquidoAspirador }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <div class="sparkline8-list">
                            <div class="sparkline8-graph">
                                <div class="static-table-list">
                                    <table class="table">
                                        <thead>
                                        <th>Datos del Paciente al salir del salón</th>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>Estado</td>
                                            <td>{{ operacion.estadoSalirSalonFk.nombre }}</td>
                                        </tr>
                                        <tr>
                                            <td>Pulso</td>
                                            <td>{{ operacion.pulso }} lat/min</td>
                                        </tr>
                                        <tr>
                                            <td>Reflejos</td>
                                            <td>{{ operacion.reflejosFk.nombre }}</td>
                                        </tr>
                                        <tr>
                                            <td>Sala</td>
                                            <td>{{ operacion.salaFk.nombre }}</td>
                                        </tr>
                                        <tr>
                                            <td>Cama</td>
                                            <td>{{ operacion.cama }}</td>
                                        </tr>
                                        <tr>
                                            <td>Respiración</td>
                                            <td>{{ operacion.respiracionFk.nombre }}</td>
                                        </tr>
                                        <tr>
                                            <td>Tensión Arterial</td>
                                            <td>{{ operacion.tensionArterial }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-left: 3%; margin-bottom: 1%">
                <div class="button-ad-wrap res-mg-b-30 responsive-mg-b-0">
                    <div class="button-ap-list responsive-btn">
                        <div class="btn-group btn-custom-groups">
                            <button class="btn btn-primary" style="background-color: #006df0"
                                    href="{{ path('operacionmodif_new', { 'idOperacion': operacion.idOperacion }) }}">
                                <a href="{{ path('operacionmodif_new', { 'idOperacion': operacion.idOperacion }) }}"
                                   style="color:#ffffff">Editar
                                    Operación</a>
                            </button>
                            <button class="btn btn-primary" style="background-color: #006df0"
                                    href="{{ path('operacion_new') }}">
                                <a href="{{ path('operacion_new') }}" style="color:#ffffff">Agregar
                                    Operación</a>
                            </button>
                            <button class="btn btn-primary" style="background-color: #006df0"
                                    href="{{ path('operacion_index') }}">
                                <a href="{{ path('operacion_index') }}" style="color:#ffffff"> Volver a la Lista</a>
                            </button>
                            <button class="btn btn-primary" style="background-color: #006df0"
                                    href="{{ path('operacion_show', { 'idOperacion': operacion.idOperacion }) }}">
                                <a href="{{ path('operacion_show', { 'idOperacion': operacion.idOperacion }) }}"
                                   style="color:#ffffff">Ver
                                    Modificación</a>
                            </button>
                            {#<button type="button" class="btn btn-primary" style="background-color: #006df0">#}
                            {#{{ form_start(delete_form) }}#}
                            {#<a type="submit" value="Delete" style="color:#ffffff">Eliminar Operación</a>#}
                            {#<input type="submit" value="Delete">#}
                            {#{{ form_end(delete_form) }}#}
                            {#</button>#}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block graficos %}{% endblock %}